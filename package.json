{
  "name": "appointment-slots",
  "version": "1.0.0",
  "description": "Template for fastify apps",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e ts,json,env --exec ts-node --files -r dotenv/config src/index.ts",
    "test": "npm run build && LOG_LEVEL=error node --test dist/**/*.test.js",
    "lint": "biome lint src",
    "build": "tsc -p tsconfig.json",
    "docker:build": "docker build --build-arg PORT=3000 -t appointment-slots .",
    "docker:run": "bash -c 'PORT=$(grep ^PORT .env | cut -d= -f2); docker run -e PORT=$PORT -e LOG_LEVEL=debug -p $PORT:$PORT appointment-slots'"
  },
  "keywords": [],
  "author": "Niels Van den broeck",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "node-test-junit-reporter": "^2.0.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@sinclair/typebox": "^0.34.41",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.1.0",
    "uuid": "^13.0.0"
  },
  "type": "module"
}
